<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="multiply"
    android:backgroundTint="@color/white"
    android:background="#DDFBED"
    tools:context="com.smsnotif.doorbellsms.splashscreen">

    <ImageView
        android:id="@+id/mip"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/todo"
        android:rotationX="0"
        android:src="@drawable/applogo">

    </ImageView>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mip"
       android:layout_centerHorizontal="true"
        android:fontFamily="@font/goldleaf"
        android:text="@string/android_based_sms_doorbell"
        android:gravity="center"
        android:textColor="#D0545454"
        android:textSize="25sp" />

    <TextView
        android:layout_below="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/asleep"
        android:text="@string/securing_your_home"
        android:textColor="#D7545454"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/antoniobold"
        android:text="@string/rjjm"
        android:textColor="#F3015950"
        android:textSize="22sp"
        tools:textAppearance="@style/TextAppearance.AppCompat.Body2">

    </TextView>


</RelativeLayout>