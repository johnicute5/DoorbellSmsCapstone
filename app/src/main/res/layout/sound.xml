<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.smsnotif.doorbellsms.qrcodescanner"
    android:background="@drawable/bg25">

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/aquirebold"
        android:text="ANDROID BASED DOORBELL"
        android:textColor="#0E5A53"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:fontFamily="@font/aquirebold"
        android:layout_centerHorizontal="true"
        android:text="WITH SMS SUPPORT"
        android:textColor="#0E5A53"
        android:textSize="22sp" />
    <TextView
        android:id="@id/title_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/antoniobold"
        android:text="@string/select_your_doorbell_sound"
        android:textColor="#0E5A53"
        android:textSize="22sp" />

    <Button
        android:text="SUBMI THIS SOUND"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dropd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/playsound"
        android:background="#0E5A53"

        />
    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_t2"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/antoniobold"
        android:text="Select sound"
        android:textColor="#0E5A53"
        android:textSize="22sp" />

    <Spinner
        android:id="@+id/dropd"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_below="@id/t2"
        android:layout_centerInParent="true"
        android:autofillHints="select sound"
        android:background="@drawable/dropdown"
        android:dropDownWidth="200dp"
        android:dropDownSelector="@color/teal_700"
        android:popupBackground="#0E5A53"
        android:textAlignment="center"
        android:textColor="#0E5A53"
        tools:fontFamily="@font/antoniobold" />




</RelativeLayout>