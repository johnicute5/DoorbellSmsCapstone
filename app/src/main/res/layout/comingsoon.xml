<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.smsnotif.doorbellsms.qrcodescanner"
    android:background="@drawable/bg25">

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:fontFamily="@font/aquirebold"
        android:text="ANDROID BASED DOORBELL WITH SMS SUPPORT"
        android:textColor="#0E5A53"
        android:textSize="22sp" />
    <TextView
        android:id="@id/title_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/antoniobold"
        android:text="Coming soon"
        android:textColor="#0E5A53"
        android:textSize="27sp" />
    <ImageView

        android:id="@+id/maintain"
        android:layout_width="350dp"
        android:layout_below="@id/title_t2"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/comingsoon"
        >

    </ImageView>

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maintain"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/antoniobold"
        android:padding="10dp"
        android:text="oops... Sorry this feature is unavailable right now please tune in for the upcoming anouncements"
        android:textAlignment="center"
        android:textColor="#0E5A53"
        android:textSize="20sp" />
    <Button
        android:id="@+id/back"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/title3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:background="#E0FFFFFF"
        android:fontFamily="@font/antoniobold"
        android:text="Return"
        android:textColor="#0E5A53"
        android:textSize="22sp" />

</RelativeLayout>