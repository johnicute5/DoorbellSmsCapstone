<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_single_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smsnotif.doorbellsms.showsinglerec"
    android:background="@drawable/bg25">
    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:fontFamily="@font/aquirebold"
        android:text="ANDROID BASED DOORBELL WITH SMS SUPPORT"
        android:textColor="#0E5A53"
        android:textSize="22sp" />
    <TextView
        android:id="@id/title_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/antoniobold"
        android:text="Doorbell Details"
        android:textColor="#0E5A53"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_t2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/antoniobold"
        android:text="Doorbell Model = "
        android:textColor="#0E5A53"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/edittextdbmodel"
        android:layout_below="@id/title_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="Model Show Here"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:fontFamily="@font/antoniobold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:fontFamily="@font/antoniobold"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#0E5A53"
        android:text="Doorbell Name = "
        android:textSize="20dp" />

    <TextView
        android:text="Name Show Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/textdbname"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:fontFamily="@font/antoniobold"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="Phone Number = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/antoniobold"
        android:textColor="#0E5A53"/>

    <TextView
        android:text="Number Show Here "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/textphonenum"
        android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView"
        android:background="@color/white"
        android:fontFamily="@font/antoniobold"
        android:layout_toEndOf="@+id/textView" />
    <TextView
        android:text="Notif Message = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0E5A53"
        android:textSize="20dp"
        android:fontFamily="@font/antoniobold"
        android:layout_centerHorizontal="true"
        android:id="@+id/textmessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="20dp"/>

    <TextView
        android:text="Message Show Here "
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:fontFamily="@font/antoniobold"
        android:id="@+id/textnotifmessage"
        android:background="@color/white"
        android:layout_alignBaseline="@+id/textmessage"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />


    <Button
        android:text="Update This Record"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textmessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/buttonUpdate"
        android:background="#0E5A53"
        />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUpdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="#0E5A53"
        android:text="Delete This Record"
        />

</RelativeLayout>