<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_single_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smsnotif.doorbellsms.userprofile"
    android:background="@drawable/bg25">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:fontFamily="@font/aquirebold"
        android:text="ANDROID BASED DOORBELL WITH SMS SUPPORT"
        android:textColor="#0E5A53"
        android:textSize="22sp" />
    <TextView
        android:id="@id/title_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/antoniobold"
        android:text="User's Profile"
        android:textColor="#0E5A53"
        android:textSize="22sp" />
    <ImageView

        android:id="@+id/img"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_below="@id/title_t2"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >

    </ImageView>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/antoniobold"
        android:text="Firstname  = "
        android:textColor="#0E5A53"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textfname1"
        android:layout_below="@id/img"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="Firstname"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:fontFamily="@font/antoniobold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:fontFamily="@font/antoniobold"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#0E5A53"
        android:text="Lastname  = "
        android:textSize="20dp" />

    <TextView
        android:text="Lastname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/textlname1"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"

        android:fontFamily="@font/antoniobold"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="Email          = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/antoniobold"
        android:textColor="#0E5A53"/>

    <TextView
        android:text="Email "
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/textemail1"
        android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"

        android:background="@color/white"
        android:fontFamily="@font/antoniobold"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:text="Username = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0E5A53"
        android:textSize="20dp"
        android:fontFamily="@font/antoniobold"
        android:layout_centerHorizontal="true"
        android:id="@+id/textmessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="30dp"/>
    <TextView
        android:text="Username  "
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:fontFamily="@font/antoniobold"
        android:id="@+id/textusername1"
        android:background="@color/white"
        android:layout_alignBaseline="@+id/textmessage"
        android:layout_alignBottom="@+id/textemail1"
        android:layout_toEndOf="@+id/textView" />


    <TextView
        android:text="Password  = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0E5A53"
        android:textSize="20dp"
        android:fontFamily="@font/antoniobold"
        android:layout_centerHorizontal="true"
        android:id="@+id/pwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textmessage"
        android:layout_marginTop="20dp"/>

    <TextView
        android:text="  Password "
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:fontFamily="@font/antoniobold"
        android:id="@+id/textpassword1"
        android:background="@color/white"
        android:layout_alignBaseline="@+id/pwd"
        android:layout_alignBottom="@+id/textemail1"
        android:layout_toRightOf="@+id/pwd"
        android:layout_toEndOf="@+id/pwd" />






    <Button
        android:text="Update Profile"
        android:layout_width="200dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antoniobold"
        android:layout_below="@+id/textpassword1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonUpdate1"
        android:textSize="22dp"
        android:background="#0E5A53"
        />

    <Button
        android:id="@+id/buttonDelete2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUpdate1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="#0E5A53"
        android:padding="5dp"
        android:textSize="22dp"
        android:fontFamily="@font/antoniobold"
        android:text="Delete Profile"
        />
</RelativeLayout>
</ScrollView>