<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_single_record"
    android:layout_width="match_parent"
    android:backgroundTintMode="multiply"
    android:backgroundTint="@color/white"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smsnotif.doorbellsms.updateuser"
    android:background="@drawable/bg25">

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:fontFamily="@font/aquirebold"
        android:text="ANDROID BASED DOORBELL WITH SMS SUPPORT"
        android:textColor="#0E5A53"
        android:textSize="22sp" />
    <TextView
        android:id="@id/title_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/antoniobold"
        android:text="UpdateProfile"
        android:textColor="#0E5A53"
        android:textSize="22sp" />
    <ImageView

        android:id="@+id/img"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_below="@id/title_t2"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >

    </ImageView>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:fontFamily="@font/antoniobold"
        android:text="Firstname  = "
        android:textColor="#0E5A53"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edittextfname"
        android:layout_below="@id/img"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:hint="Firstname"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:textColorHint="#000"
        android:fontFamily="@font/antoniobold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:fontFamily="@font/antoniobold"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#0E5A53"
        android:text="Lastname   = "
        android:textSize="20dp" />

    <EditText
        android:hint="Lastname"
        android:textColorHint="#000"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/edittextlname"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:fontFamily="@font/antoniobold"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="Email           = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/antoniobold"
        android:textColor="#0E5A53"/>

    <EditText
        android:hint="Email "
        android:textColorHint="#000"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/edittextemail"
        android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView"
        android:background="@color/white"
        android:fontFamily="@font/antoniobold"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:text="Username  ="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0E5A53"
        android:textSize="20dp"
        android:fontFamily="@font/antoniobold"
        android:layout_centerHorizontal="true"
        android:id="@+id/textmessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="30dp"/>
    <EditText
        android:hint="Username  "
        android:textColorHint="#000"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:fontFamily="@font/antoniobold"
        android:id="@+id/edittextusername"
        android:background="@color/white"
        android:layout_alignBaseline="@+id/textmessage"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />


    <TextView
        android:text="Password   = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0E5A53"
        android:textSize="20dp"
        android:fontFamily="@font/antoniobold"
        android:layout_centerHorizontal="true"
        android:id="@+id/pwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textmessage"
        android:layout_marginTop="20dp"/>

    <EditText
        android:hint="Password "
        android:textColorHint="#000"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:fontFamily="@font/antoniobold"
        android:id="@+id/edittextpassword"
        android:background="@color/white"
        android:layout_alignBaseline="@+id/pwd"
        android:layout_toRightOf="@+id/pwd"
        android:layout_toEndOf="@+id/pwd" />

    <Button
        android:text="Update"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edittextpassword"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/antoniobold"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:id="@+id/buttonUpdate1"
        android:background="#0E5A53"
        />
</RelativeLayout>